{
    "name": "gulp-base-configuration",
    "version": "1.0.0",
    "description": "Basic configuration of the project assembly",
    "scripts": {
        "dev": "set NODE_ENV=development && gulp build",
        "build": "set NODE_ENV=production && gulp build",
        "start": "npm run dev && gulp serve",
        "lint:js": "node_modules/.bin/eslint src/ --ext .js",
        "lint:scss": "node_modules/.bin/stylelint src/**/*.scss --syntax scss",
        "lint": "npm run lint:js && npm run lint:scss",
        "precommit": "lint-staged",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Alivander",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^8.6.2",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.7.0",
        "browser-sync": "^2.24.4",
        "del": "^3.0.0",
        "eslint": "^4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.12.0",
        "gulp": "^3.9.1",
        "gulp-babel": "^7.0.1",
        "gulp-cache": "^1.0.2",
        "gulp-concat": "^2.6.1",
        "gulp-csso": "^3.0.1",
        "gulp-if": "^2.0.2",
        "gulp-imagemin": "^4.1.0",
        "gulp-plumber": "^1.2.0",
        "gulp-postcss": "^7.0.1",
        "gulp-rename": "^1.3.0",
        "gulp-sass": "^4.0.1",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-svgstore": "^6.1.1",
        "gulp-uglyfly": "^1.4.2",
        "gulp-webp": "^3.0.0",
        "lint-staged": "^7.2.0",
        "postcss-flexbugs-fixes": "^3.3.1",
        "run-sequence": "^2.2.1",
        "stylelint": "^9.3.0",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-order": "^0.8.1",
        "stylelint-scss": "^3.1.3"
    },
    "eslintIgnore": [
        "node_modules/",
        "dist/"
    ]
}
